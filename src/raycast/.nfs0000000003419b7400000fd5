#include "../../inc/cub3D.h"

inline void    init_rays(t_cub *cub)
{
    cub->rays = (t_ray *)ft_calloc(cub->img.width, sizeof(t_ray));
    if (!cub->rays)
        my_mlx_free(cub, "Failed to allocate memory for rays", (t_plane){-1, 4, 1, 1});
}